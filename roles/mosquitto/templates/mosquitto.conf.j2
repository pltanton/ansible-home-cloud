pid_file /var/run/mosquitto.pid

persistence true
persistence_location /var/lib/mosquitto/

log_dest file /var/log/mosquitto/mosquitto.log

listener 9001
protocol websockets

certfile /etc/letsencrypt/live/mqtt.kaliwe.ru/cert.pem
cafile /etc/letsencrypt/live/mqtt.kaliwe.ru/chain.pem
keyfile /etc/letsencrypt/live/mqtt.kaliwe.ru/privkey.pem

allow_anonymous false
password_file /root/mosquitto_passwd

